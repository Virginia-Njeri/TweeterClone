<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/tvHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Virginia@254_Kenya 20mins."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:text="Today I worked on Python list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/imgAvatar"
                app:layout_constraintTop_toBottomOf="@+id/tvHandle" />

            <ImageView
                android:id="@+id/imgMessage"
                android:layout_width="29dp"
                android:layout_height="34dp"
                android:layout_marginStart="97dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_message" />

            <ImageView
                android:id="@+id/imgRetweet"
                android:layout_width="33dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/imgMessage"
                app:layout_constraintTop_toBottomOf="@+id/tvTweet"
                app:srcCompat="@drawable/ic_retweet" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="31dp"
                android:layout_height="33dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toEndOf="@+id/imgReaction"
                app:layout_constraintTop_toBottomOf="@+id/tvTweet"
                app:srcCompat="@drawable/ic_share" />

            <ImageView
                android:id="@+id/imgReaction"
                android:layout_width="36dp"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/imgRetweet"
                app:layout_constraintTop_toBottomOf="@+id/tvTweet"
                app:srcCompat="@drawable/ic_heart__1_" />

            <TextView
                android:id="@+id/tvNum1"
                android:layout_width="17dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:text="34"
                app:layout_constraintStart_toEndOf="@+id/imgMessage"
                app:layout_constraintTop_toTopOf="@+id/imgMessage" />

            <TextView
                android:id="@+id/tvNum2"
                android:layout_width="17dp"
                android:layout_height="18dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:text="89"
                app:layout_constraintStart_toEndOf="@+id/imgRetweet"
                app:layout_constraintTop_toTopOf="@+id/imgRetweet" />

            <TextView
                android:id="@+id/tvNum3"
                android:layout_width="17dp"
                android:layout_height="19dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:text="56"
                app:layout_constraintStart_toEndOf="@+id/imgReaction"
                app:layout_constraintTop_toTopOf="@+id/imgReaction" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>